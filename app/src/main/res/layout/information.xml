<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="확인하고 싶은 내용을 아래에서 터치하세요"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="70dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#3BD3889D"
                android:text="정의"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#70D3889D"
                android:text="원인"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#8DD3889D"
                android:text="증상"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#A6D3889D"
                android:text="진단"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#CBD3889D"
                android:text="치료"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#D3889D"
                android:text="예방방법"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/m_tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="출처 : http://www.kagp.or.kr/ko/4" />

</LinearLayout>